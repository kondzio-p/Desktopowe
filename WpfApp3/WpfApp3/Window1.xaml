<Window x:Name="wDialog" x:Class="WpfApp3.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Okno wstawiania imienia" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Podaj imię: "></TextBlock>
            <TextBox x:Name="FirstNameTextBox" Margin="0,10,0,10"></TextBox>
            <TextBlock Text="Podaj nazwisko: "></TextBlock>
            <TextBox x:Name="LastNameTextBox" Margin="0,10,0,10"></TextBox>
            <TextBlock Text="Podaj mail: "></TextBlock>
            <TextBox x:Name="EmailTextBox" Margin="0,10,0,10"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnOK" Content="OK" Width="80" Height="40" Margin="10" Click="btnOK_Click" ></Button>
                <Button x:Name="btnAnuluj" Content="Anuluj" Width="80" Height="40" Margin="10" Click="CancelButton_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
