<Window x:Class="ApkaLosoweOkregi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApkaLosoweOkregi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowState="Maximized">
    <Grid>
        <TextBox x:Name="tbLiczbaKolek" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0" Width="200" Height="30"/>
        <Button Content="Losuj Kółka" VerticalAlignment="Top" HorizontalAlignment="Center" Click="OnLosujKolkaClick" Margin="0,60,0,0" Width="100" Height="26"/>
        <Canvas x:Name="canvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,100,10,10"/>
    </Grid>
</Window>
