<Window x:Class="wczytajObraz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel HorizontalAlignment="Center" Margin="10" >
        <Button Content="Wczytaj obraz" Width="100" Height="30" Margin="0,0,0,10" Click="Button_Click"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >

            <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="5" Width="500" Height="350" >
                <Image Name="imagePreview" Stretch="Uniform"/>
            </Border>

            <StackPanel Margin="20,0,0,0" VerticalAlignment="Top" Width="200">
                <TextBlock Text="Informacje o obrazie:" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Name="txtFileName" Margin="0,0,0,5"/>
                <TextBlock Name="txtFilePath" Margin="0,0,0,5"/>
                <TextBlock Name="txtDimensions" Margin="0,0,0,5"/>
                <TextBlock Name="txtFileSize" Margin="0,0,0,5"/>
                <TextBlock Name="txtFileSize2" Margin="0,0,0,5"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
