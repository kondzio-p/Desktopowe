<Window x:Class="obslugaPlikow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:obslugaPlikow"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="400">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0">
                <Label Content="Imię: "/>
            <TextBox x:Name="tboxImie" Width="150"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            <Label Content="Nazwisko: "/>
            <TextBox x:Name="tboxNazwisko" Width="150"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2">
            <Label Content="Wiek: "/>
            <TextBox x:Name="tboxWiek" Width="150"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3">
            <Label Content="Ulica: "/>
            <TextBox x:Name="tboxUlica" Width="150"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4">
            <Label Content="Kod: "/>
            <TextBox x:Name="tboxKod" Width="150"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="5" >
            <Button x:Name="Wczytaj" Content="Wczytaj" Margin="10" Width="100" Height="50" Click="btnWczytaj_Click"/>
            <Button x:Name="Zapisz" Content="Zapisz" Margin="10" Width="100" Height="50" Click="btnZapisz_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="6" >
            <Button x:Name="Poprzedni" Content="Poprzedni  el. listy" Margin="10" Width="100" Height="50" Click="btnPoprzedni_Click"/>
            <Button x:Name="Nastepny" Content="Nastepny  el. listy" Margin="10" Width="100" Height="50" Click="btnNastepny_Click"/>
        </StackPanel>

    </Grid>
</Window>
