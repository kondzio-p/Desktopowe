<Window x:Class="brushConvert.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:brushConvert"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Figury">
                <MenuItem Header="Koło" Click="MenuItem_Click"/>
                <MenuItem Header="Kwadrat" Click="MenuItem_Click_1"/>
                <MenuItem Header="Prostokąt" Click="MenuItem_Click_2"/>
            </MenuItem>
        </Menu>


        <Canvas Name="canvasFigury" Background="White" DockPanel.Dock="Top" Height="450">
            <Canvas.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Koło" Click="MenuItem_Click"/>
                    <MenuItem Header="Kwadrat" Click="MenuItem_Click_1"/>
                    <MenuItem Header="Prostokąt" Click="MenuItem_Click_2"/>
                </ContextMenu>
            </Canvas.ContextMenu>
        </Canvas>

        <TextBlock Name="OpisTextBlock" Text="Wybierz figurę z menu..." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>

    </DockPanel>
</Window>
