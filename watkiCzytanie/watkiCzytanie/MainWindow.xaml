<Window x:Class="watkiCzytanie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:watkiCzytanie"
        mc:Ignorable="d"
        Title="Wątki w czytaniu plików" Height="446" Width="444">
    <Grid Margin="0,0,4,6">
        <StackPanel Orientation="Vertical" Margin="10">
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <ListView Name="txt1" Margin="10" Height="120" Width="180"/>
                <ListView Name="txt2" Margin="10" Height="120" Width="180"/>
            </StackPanel>
            <ProgressBar x:Name="progressBar1" Height="15" Margin="10" Minimum="0" Maximum="100"/>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Name="btn1" Content="Czytnie pliku 1" Margin="10" Click="btn1_Click" Width="120"/>
                <Button Name="btn1_pause" Content="Pause" Click="Pause1_click" Margin="10" Width="120"/>
                <Button Name="btn1_stop" Content="Stop" Click="Stop1_click" Margin="10" Width="120"/>
            </StackPanel>
            <ProgressBar x:Name="progressBar2" Height="15" Margin="10" Minimum="0" Maximum="100"/>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Name="btn2" Content="Czytnie pliku 2" Margin="10" Click="btn2_Click" Width="120"/>
                <Button Name="btn2_pause" Content="Pause" Click="Pause2_click" Margin="10" Width="120"/>
                <Button Name="btn2_stop" Content="Stop" Click="Stop2_click" Margin="10" Width="120"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
