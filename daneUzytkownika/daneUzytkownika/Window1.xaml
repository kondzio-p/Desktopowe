<Window x:Class="daneUzytkownika.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Podsumowanie" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Name="printArea" Margin="20">
            <Image Name="imgZdjecie" Height="200" Width="160" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,15"/>
            <TextBlock Name="txtImieNazwisko" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
            <TextBlock Name="txtPodsumowanie" FontSize="14"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,10,10">
            <Button Content="Drukuj" Width="80" Click="BtnDrukuj_Click"/>
        </StackPanel>
    </Grid>
</Window>
