<Window x:Class="pokazDane.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pokazDane"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350px">
    <Grid>
        <StackPanel>
        <GroupBox Width="300px" Height="200px" VerticalAlignment="Top" Header="Dane osobowe" Margin="10">
            <StackPanel>
                <TextBlock Text="Imię:" Margin="5"/>
                <TextBox Name="ImieTextBox" Margin="5"/>
                <TextBlock Text="Nazwisko:" Margin="5"/>
                <TextBox Name="NazwiskoTextBox" Margin="5"/>
                <TextBlock Text="Czy palący:" Margin="5"/>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <RadioButton Name="PalacyTakRadioButton" Content="Tak" Margin="5"/>
                    <RadioButton Name="PalacyNieRadioButton" Content="Nie" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

            <Button Name="showDane" Content="Pokaz Dane" Width="100px" Height="30px" Click="showDane_Click" Margin="10"/>

            <Button Name="showDaneControl" Content="Pokaz Dane" Width="100px" Height="30px" Margin="10" Click="showDaneControl_Click"/>

            <Frame Name="ramka1" NavigationUIVisibility="Hidden"/>

            <ContentControl Name="contentControl1" Margin="10"></ContentControl>

        </StackPanel>

        

    </Grid>
</Window>
